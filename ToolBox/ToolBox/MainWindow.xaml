<Window x:Class="ToolBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolBox"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ToolboxMainWindow" MinHeight="100" MinWidth="150" SizeToContent="WidthAndHeight">
      <Grid MinWidth="520" MinHeight="320" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.024"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource BackGround}"/>
        </Grid.Background>
        <Label x:Name="MainWindowTitle" Content="&#x9;&#x9;Quicken Loans Tool Box&#xD;&#xA;&#xD;&#xA;&#x9;Please Click Login Below To Continue:&#xD;&#xA;&#xD;&#xA;&#x9;&#x9;Authorized Users Only" Height="123" Margin="33.2,0,33,187.4" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="MainWindowLoginButton" Content="Login" Height="46.4" Margin="10,0,10,95.4" VerticalAlignment="Bottom" Style="{DynamicResource MainWindowLoginButton}" FontWeight="Bold" Click="MainWindowLoginButton_Click"/>
        <Button x:Name="MainWindowExitButton" Content="EXIT" Height="46.4" Margin="10,0,10,44" VerticalAlignment="Bottom" Style="{DynamicResource MainWindowLoginButton}" FontWeight="Bold" Click="MainWindowExitButton_Click"/>
    </Grid>
</Window>
